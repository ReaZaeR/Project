@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using BoardAdv.Models
@model AddAdvert
<div>
    <div class="col-lg-offset-4 col-lg-5">
        <h3> Добавить объявление</h3>
    </div>
        @using (Html.BeginForm("Add", "Home", FormMethod.Post, new {  @class = "form-horizontal", enctype = "multipart/form-data" }))
        {
            <div class="form-group">
                @Html.LabelFor(u => u.Title, new { @class = "col-lg-4 control-label" })
                <div class="col-lg-3">
                    @Html.TextBoxFor(u => u.Title, new { @class = "form-control" })
                    @Html.ValidationMessageFor(u => u.Title)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(u => u.Description, new { @class = "col-lg-4 control-label" })
                <div class="col-lg-3">
                    @Html.TextAreaFor(u => u.Description, new { @class = "form-control" })
                    @Html.ValidationMessageFor(u => u.Description)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(u => u.Image, new { @class = "col-lg-4 control-label" })
                <div class="col-lg-3">
                    @Html.TextBoxFor(u => u.Image, new { type = "file", @class = "form-control" })
                    @Html.ValidationMessageFor(u => u.Image)
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-3 col-lg-offset-4">
                    <button type="submit" class="btn btn-info">Добавить</button>
                </div>
            </div>
        }
    </div>
